block var
doctype html
html(lang="ja")
  head
    meta(charset='utf-8')
    meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    block meta
      mixin meta(metas)
        meta(name="description", content=metas.description)
        meta(name="author", content="虎猫の穴")
        title=`${metas.title} | コードレイヤードCtC2119(虎猫の穴)`
    block link
      link(rel='stylesheet', href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css")
    block head_script
  body(id="tora-2019")
    block header
      mixin header(page)
        nav.navbar.fixed-top.navbar-expand-lg.navbar-dark
            h1: a(href="./") <span>(2019年虎猫の穴イベント定例会) </span>コードレイヤードCtC2119
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            .collapse.navbar-collapse(id="navbarSupportedContent")
              ul.navbar-nav.mr-auto
                li.nav-item: a.nav-link(href="./" class=page== 'top' ? 'btn-active' : '') 予告
                li.nav-item: a.nav-link(href="./world.html" class=page== 'world' ? 'btn-active' : '') 世界
                li.nav-item: a.nav-link(href="./npc.html" class=page== 'npc' ? 'btn-active' : '') 人物
                li.nav-item: a.nav-link(href="./regulation.html" class=page== 'regulation' ? 'btn-active' : '') レギュレーション
                li.nav-item: a.nav-link(href="./undertown.html" class=page== 'undertown' ? 'btn-active' : '') 地下街開発
                li.nav-item: a.nav-link(href="./items.html" class=page== 'items' ? 'btn-active' : '') オリジナルアイテム             
    header
    main
        block main
    footer
        p: a(href="http://www.fear.co.jp/codelayerd/") コードレイヤードは有限会社ファーイースト・アミューズメント・リサーチの著作物です。
        address © 2019 虎猫の穴
block end_of_body
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    script
      | $('#tora-2019').on('click', function(e) {
      |   if ($(e.target).closest('.nav-item').length === 0) {
      |     $('#navbarSupportedContent').collapse('hide');
      |   }
